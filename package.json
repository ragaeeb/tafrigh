{
  "name": "tafrigh",
  "version": "1.0.0",
  "description": "A NodeJS library inspired by the Python Tafrigh project for transcribing audio/video to text.",
  "main": "dist/main.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "parcel build",
    "test": "node --env-file .env.test node_modules/.bin/vitest run",
    "test:e2e": "node --env-file .env.test node_modules/.bin/vitest --config vitest.e2e.config.ts --run",
    "test:ci": "vitest run",
    "test:e2e:ci": "vitest --config vitest.e2e.config.ts --run"
  },
  "files": [
    "dist/main.js",
    "dist/main.js.map",
    "dist/*.d.ts"
  ],
  "dependencies": {
    "deepmerge": "^4.3.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "jsonstream-next": "^3.0.0",
    "ora": "^8.1.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "transcription",
    "wit.ai",
    "audio",
    "video",
    "nodejs"
  ],
  "author": "Ragaeeb Haq",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "@semantic-release/changelog": "^6.0.3",
    "@types/eslint__js": "^8.42.3",
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/jsonstream-next": "^3.0.3",
    "@types/node": "^22.5.3",
    "@types/pino": "^7.0.5",
    "@types/pino-pretty": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "parcel": "^2.12.0",
    "prettier": "^3.3.3",
    "semantic-release": "^24.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0",
    "vitest": "^2.0.5"
  }
}
